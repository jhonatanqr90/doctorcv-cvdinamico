.cv
    position relative
    width rem(966)
    margin 0 auto

    &__back
        width 100%
        height 100%
        background-color #E1E1E1
        position absolute
        top 0
        left 0
        z-index 1
        transform rotate(-1.5deg)
    
    &__shadow-1
        width 96%
        height rem(400)
        background-color rgba(0,0,0,0.7)
        position absolute
        bottom 0
        left 2%
        z-index 2
        transform rotate(-3.5deg)
        filter blur(15px)
    
    &__shadow-2
        width 96%
        height rem(400)
        background-color rgba(0,0,0,0.7)
        position absolute
        bottom 0
        left 2%
        z-index 2
        transform rotate(3.5deg)
        filter blur(15px)
    
    &__shadow-3
        width 94%
        height rem(400)
        background-color rgba(0,0,0,0.5)
        position absolute
        top rem(50)
        right rem(-20)
        z-index 2
        transform rotate(4deg)
        filter blur(16px)

    &__shadow-4
        width 94%
        height rem(400)
        background-color rgba(0,0,0,0.5)
        position absolute
        bottom rem(30)
        right rem(-20)
        z-index 2
        transform rotate(-4deg)
        filter blur(15px)
    
    &__shadow-5
        width 94%
        height rem(600)
        background-color rgba(0,0,0,0.5)
        position absolute
        bottom rem(440)
        right rem(-10)
        z-index 2
        filter blur(12px)

    &__front
        background-color #F0F0F0
        width 100%
        margin 0 auto
        position relative
        z-index 4
        padding rem(30)
        color var(--gray-color)
        letter-spacing rem(0.5)

        display flex
        flex-direction column
    
    &__header
        display flex
        flex-direction column
        align-items flex-start

        &__title
            font-size rem(63)
            text-transform uppercase
            font-weight 900
            line-height 1.1
        
        &__link
            font-size rem(22)
            display inline
            font-weight 300
    
    &__block
        display flex
        flex-direction column
        gap rem(17)
        font-size rem(17)
        font-weight 300

        &__title
            font-size rem(34)
            line-height 1
            font-weight 800
            text-transform uppercase
        
        &__text

            &.m--mini
                max-width rem(550)
        
        &__article
            margin-bottom rem(10)
            &:last-of-type
                margin-bottom 0

            &__title
                text-transform uppercase
                font-weight 500
            &__subtitle
                display block
                margin-bottom rem(20)
            &__list
                display flex
                flex-direction column
                gap rem(20)
                li
                    padding-left rem(17)
                    position relative
                    &::before
                        content ''
                        display block
                        circle(4)
                        background-color #A2A2A2
                        position absolute
                        top rem(6)
                        left rem(0)
    
    &__actions
        position relative
        padding rem(36, 40)
        border rem(1) solid #F0F0F0
        transition all ease .25s

        &__items
            background-color #F0F0F0
            padding rem(10)
            border-radius rem(30)

            display flex
            flex-direction column
            gap rem(13)

            position absolute
            top rem(10)
            right rem(10)

            transition all ease .25s

            img
                cursor pointer

                opacity 0
                transform translateX(15px)
                transition all ease-out .25s

                &:nth-child(1)
                    transition-delay 0
                &:nth-child(2)
                    transition-delay 0.06s
                &:nth-child(3)
                    transition-delay 0.12s

        &:hover
            background-color #F5F5F5
            color #111
            border-color #EBEBEB

            .cv__actions__items
                background-color #F5F5F5
                
                img
                    opacity 0.4
                    transform translateX(0)
    
                    &:hover
                        transform scale(1.2)
                        opacity 1
    
    &__more
        circle(48)
        background-color var(--gray-color)
        cursor pointer

        position absolute
        bottom rem(70)
        right rem(70)
        z-index 5

        transition all ease-out 0.5s

        &::before, &::after
            content ''
            display block
            position absolute
            top 50%
            left 50%
            transform translate(-50%, -50%)
            width rem(8)
            height rem(24)
            background-color var(--white-color)

        &::after
            transform translate(-50%, -50%) rotate(90deg)
        
        &:hover
            background-color #FF3201
            transform rotate(90deg) scale(1.15)


