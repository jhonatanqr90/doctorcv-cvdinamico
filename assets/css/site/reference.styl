.reference
    fullBox(fixed)
    z-index 100

    display none
    align-items center
    justify-content center
    padding rem(50)

    &.-active-
        display flex
    
    &.-show-
        .reference__back
            opacity 1
        .reference__content
            opacity 1
            transform translateY(0)

    &__back
        fullBox(absolute)
        background-color rgba(0,0,0,.7)
        opacity 0
        transition opacity ease .25s
    
    &__content
        position relative
        background-color var(--paper-background)
        width 100%
        max-width rem(700)
        box-shadow rem(0, 10, 20) rgba(0,0,0,.5)
        opacity 0
        transform translateY(100px)
        transition all ease .25s

        li
            font-size rem(40)
            text-transform uppercase
            padding rem(70, 50)
            font-weight 800
            color var(--gray-color)
            border-bottom rem(1) solid rgba(0,0,0,.05)
            cursor pointer
            line-height 1
            transition color ease .25s
            &:nth-child(2)
                border-color rgba(0,0,0,.1)
            &:nth-child(3)
                border-color rgba(0,0,0,.2)
            &:hover
                color #333