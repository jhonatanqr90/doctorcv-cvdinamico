.reference
    fullBox(fixed)
    z-index 100
    display none

    &.-active-
        display block
    
    &.-show-
        .reference__back
            opacity 1
        .reference__content
            opacity 1
            transform translateY(0)

    &__back
        fullBox(absolute)
        background-color rgba(0,0,0,.7)
        opacity 0
        transition opacity ease .25s
    
    &__container
        width 100%
        height 100%
        display flex
        padding rem(50)
        overflow auto
    
    &__content
        position relative
        background-color var(--paper-background)
        width 100%
        max-width rem(700)
        box-shadow rem(0, 10, 20) rgba(0,0,0,.5)
        opacity 0
        margin auto
        transform translateY(100px)
        transition all ease .25s

    &__item
        display flex
        flex-direction column
        gap rem(10)
        padding rem(55, 50)
        border-bottom rem(1) solid rgba(0,0,0,.08)
        transition all ease .25s
        &.m--header
            flex-direction row
        &:hover
            background-color #f5f5f5
            .reference__title
                color #333
            .reference__photo
                border-color #333
    
    &__left
        flex 1
        display flex
        flex-direction column
        gap rem(10)

    &__photo
        width rem(110)
        height rem(130)
        border rem(2) dashed var(--gray-color)
        padding rem(10)
        .reference__checkbox__box
            box(20)
            border-width rem(2)
            margin-right rem(8)
    
    &__title
        font-size rem(36)
        text-transform uppercase
        font-weight 800
        color var(--gray-color)
        line-height 1
        transition all ease .25s
    
    &__step
        display flex
        &.m--mini
            .reference__checkbox__box
                box(20)
                border-width rem(2)
                margin-right rem(8)
            .reference__title
                font-size rem(19)
                font-weight 600
                padding-top rem(5)
        
    &__checkbox
        margin rem(2, 15, 0, 0)
        input
            display none
            &:checked + .reference__checkbox__box
                border-color var(--orange-color)
                position relative
                &::before
                    content ''
                    display block
                    width 80%
                    height 40%
                    border-left rem(3) solid var(--orange-color)
                    border-bottom rem(3) solid var(--orange-color)
                    position absolute
                    top 50%
                    left 50%
                    transform translate(-50%, -70%) rotate(-45deg)
        &__box
            display block
            box(26)
            border rem(3) solid var(--gray-color)
    

    @media (max-width: --screen-xl)

        &__container
            padding rem(40)

        &__content
            max-width rem(660)
        &__item
            padding rem(60, 48)
        &__title
            font-size rem(36)
    

    @media (max-width: --screen-md)

        &__content
            max-width rem(560)
        &__item
            padding rem(50, 40)
        &__title
            font-size rem(32)
        &__checkbox__box
            box(23)
        &__step
            &.m--mini
                .reference__checkbox__box
                    box(19)
                    margin-right rem(6)
                .reference__title
                    font-size rem(18)
    

    @media (max-width: --screen-sm)

        &__content
            max-width rem(480)
        &__item
            padding rem(40, 30)
        &__title
            font-size rem(28)
        &__checkbox__box
            box(21)
        &__step
            &.m--mini
                .reference__checkbox__box
                    box(18)
                    margin-right rem(6)
                .reference__title
                    font-size rem(17)
    

    @media (max-width: --screen-xs)

        &__content
            max-width rem(380)
        &__item
            padding rem(30, 20)
        &__title
            font-size rem(23)
        &__checkbox__box
            box(20)
        &__step
            &.m--mini
                .reference__checkbox__box
                    box(17)
                .reference__title
                    font-size rem(16)