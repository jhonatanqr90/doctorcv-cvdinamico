.reference
    fullBox(fixed)
    z-index 100
    display none

    &.-active-
        display block
    
    &.-show-
        .reference__back
            opacity 1
        .reference__content
            opacity 1
            transform translateY(0)

    &__back
        fullBox(absolute)
        background-color rgba(0,0,0,.7)
        opacity 0
        transition opacity ease .25s
    
    &__container
        width 100%
        height 100%
        display flex
        padding rem(50)
        overflow auto
    
    &__content
        position relative
        background-color var(--paper-background)
        width 100%
        max-width rem(700)
        box-shadow rem(0, 10, 20) rgba(0,0,0,.5)
        opacity 0
        margin auto
        transform translateY(100px)
        transition all ease .25s

        li
            font-size rem(40)
            text-transform uppercase
            padding rem(65, 50)
            font-weight 800
            color var(--gray-color)
            border-bottom rem(1) solid rgba(0,0,0,.05)
            cursor pointer
            line-height 1
            transition all ease .25s
            &:nth-child(2)
                border-color rgba(0,0,0,.1)
            &:nth-child(3)
                border-color rgba(0,0,0,.2)
            &:hover
                color #333
                background-color #f5f5f5
    

    @media (max-width: --screen-xl)

        &__container
            padding rem(40)

        &__content
            max-width rem(660)
            li
                padding rem(60, 48)
                font-size rem(36)
    

    @media (max-width: --screen-md)

        &__content
            max-width rem(560)
            li
                padding rem(50, 40)
                font-size rem(32)
    

    @media (max-width: --screen-sm)

        &__content
            max-width rem(480)
            li
                padding rem(40, 30)
                font-size rem(28)
    

    @media (max-width: --screen-xs)

        &__content
            max-width rem(380)
            li
                padding rem(30, 20)
                font-size rem(25)