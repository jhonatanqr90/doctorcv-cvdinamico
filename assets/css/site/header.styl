// header
.header
    display flex
    align-items center
    flex-wrap wrap
    gap rem(65, 100)

    width 100%
    max-width rem(1250)
    margin 0 auto
    padding rem(53, 20, 60)

    position relative

    &__play-button
        circle(60)
        border rem(5) solid var(--white-color)
        position relative
        cursor pointer
        transition transform ease 0.25s, border-color ease .25s

        &::after
            content ''
            display block
            width 0
            height 0
            border-left rem(18) solid var(--white-color)
            border-top rem(10) solid transparent
            border-bottom rem(10) solid transparent
            position absolute
            top 50%
            left 50% 
            transform translate(-35%, -50%)
        
        &:hover
            transform scale(1.15)
            border-color rgba(255,255,255,.75)

    &__description
        width 100%
        color var(--white-color)
        font-size rem(30)
        font-weight 200
        letter-spacing rem(0.5)